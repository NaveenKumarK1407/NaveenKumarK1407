import 'package:communion_app/features/auth/ui/signup/signup_screen.dart';
import 'package:flutter/material.dart';
import 'package:get/get.dart'; // Import your SignupScreen here
import 'package:communion_app/features/auth/ui/login/login_screen.dart'; 
import 'package:communion_app/common/success_screen/success_screen.dart';
import 'package:communion_app/core/utils/sizes.dart';
import 'package:communion_app/core/utils/text_string.dart';
import 'package:communion_app/core/utils/colors.dart';

class VerifyEmailScreen extends StatelessWidget {
  const VerifyEmailScreen({super.key});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        automaticallyImplyLeading: false,
        actions: [
          IconButton(
            onPressed: () => Get.offAll(() => const SignUp()), // Navigate to SignupScreen instead of LoginScreen
            icon: const Icon(Icons.clear),
          ),
        ],
      ),
      body: SingleChildScrollView(
        child: Padding(
          padding: const EdgeInsets.all(CSizes.defaultSpace),
          child: Column(
            children: [
              // Title & Subtitle
              Text(
                CTexts.confirmEmail,
                style: Theme.of(context).textTheme.headlineMedium,
                textAlign: TextAlign.center,
              ),
              const SizedBox(height: CSizes.spaceBtwItems),
              Text(
                'supp@coding.com', // Display the email address for verification
                style: Theme.of(context).textTheme.labelLarge,
                textAlign: TextAlign.center,
              ),
              const SizedBox(height: CSizes.spaceBtwItems),
              Text(
                CTexts.confirmEmailSubTitle,
                style: Theme.of(context).textTheme.headlineMedium,
                textAlign: TextAlign.center,
              ),
              const SizedBox(height: CSizes.spaceBtwItems),

              // Buttons
              SizedBox(
                width: double.infinity,
                child: ElevatedButton(
                  onPressed: () => Get.to(() => SuccessScreen(
                        title: CTexts.yourAccountCreatedTitle,
                        subTitle: CTexts.yourAccountCreatedSubTitle,
                        onPressed: () => Get.to(() => const LoginScreen()), // Navigate to LoginScreen
                      )),
                  style: ElevatedButton.styleFrom(
                    backgroundColor: CColors.primary, // Primary color for button background
                    foregroundColor: CColors.textWhite, // Text color is white
                  ),
                  child: const Text(CTexts.tContinue),
                ),
              ),
              const SizedBox(height: CSizes.spaceBtwItems),
              SizedBox(
                width: double.infinity,
                child: TextButton(
                  onPressed: () {}, // Implement resend email functionality here
                  style: TextButton.styleFrom(
                    foregroundColor: CColors.black, backgroundColor: CColors.white, // Black text color
                    side: BorderSide(color: CColors.black, width: 1), // Black border
                  ),
                  child: const Text(CTexts.resendEmail),
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }
}
